---
import { getCollection } from 'astro:content';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-gray-50">
		<Header />
		<div class="flex-1 mb-12">
			<slot />
		</div>
		<footer class="bg-primary/10 py-16 mt-auto">
			<div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 px-4">
				<div>
					<h3 class="text-primary text-lg font-semibold mb-4">Learn more</h3>
					<ul class="space-y-2">
						<li>
							<a href="/concepts/getting-started" class="text-text-dark hover:text-primary-dark transition-colors text-sm">
								Concepts
							</a>
						</li>
						<li>
							<a href="/articles" class="text-text-dark hover:text-primary-dark transition-colors text-sm">
								Articles
							</a>
						</li>
						<li>
							<a href="/research" class="text-text-dark hover:text-primary-dark transition-colors text-sm">
								Research
							</a>
						</li>
					</ul>
				</div>
				<div>
					<h3 class="text-primary text-lg font-semibold mb-4">Contributing</h3>
					<ul class="space-y-2">
						<li>
							<a href="/logos" class="text-text-dark hover:text-primary-dark transition-colors text-sm">
								Logos & assets
							</a>
						</li>
					</ul>
				</div>
				<div>
					<p class="text-text-dark text-sm text-right"> Made possible by AX OSS contributors. <br /> Powered by Netlify.</p>
				</div>
			</div>
		</footer>
	</body>
