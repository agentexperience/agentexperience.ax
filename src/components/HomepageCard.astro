---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  href: string;
  className?: string;
  icon?: string;
  iconClassName?: string;
}

const {
  href,
  title,
  icon,
  className,
  iconClassName,
} = Astro.props;
---

<a
  href={href}
  class={`bg-white hover:bg-white border border-primary p-7 pt-6 text-lg md:text-xl group rounded-md no-underline text-text-dark shadow-sm hover:shadow-md transition-all ${className}`}
>
  {icon && <Icon name={icon} class={`size-6 mb-4 ${iconClassName}`} />}
  <h2 class="font-semibold my-0 inline-flex gap-0.5 items-center font-grotesk">
    {title}
    <Icon
      name="lucide:chevron-right"
      size="0.75em"
      class="inline-flex opacity-25 relative top-[0.05em] group-hover:opacity-100 transition-all"
    />
  </h2>
  <div class="mt-1 text-md md:text-lg text-text !leading-snug">
    <slot />
  </div>
</a>
